<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stefanoiaconetti.personalfitness_app.WaterIntakeFragment">

    <TextView
        android:id="@+id/waterIntakeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:text="@string/waterIntakeTitle"
        android:textAlignment="center"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/exerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:text="@string/oftenExercise"
        android:textSize="@dimen/normal_text_size" />

    <Spinner
        android:id="@+id/waterIntakeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@color/titlesAndBackgrounds"
        android:textSize="@dimen/normal_text_size" />

    <EditText
        android:id="@+id/weightEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:hint="@string/weight_input"
        android:inputType="numberDecimal"
        android:textSize="@dimen/normal_text_size" />

    <Button
        android:id="@+id/findoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:text="@string/BMI_button"
        android:textSize="@dimen/button_text_size" />

    <TextView
        android:id="@+id/calculationsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:contentDescription="@string/BMI_button"
        android:textAlignment="center"
        android:textSize="@dimen/subtitle_size" />

</LinearLayout>
